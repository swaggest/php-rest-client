{
  "name": "swaggest/rest-client",
  "type": "library",
  "description": "PHP REST client helpers",
  "keywords": [
    "rest",
    "swagger",
    "openapi"
  ],
  "homepage": "https://github.com/swaggest/php-rest-client",
  "license": "MIT",
  "authors": [
    {
      "name": "Viacheslav Poturaev",
      "email": "vearutop@gmail.com",
      "homepage": "https://github.com/vearutop"
    }
  ],
  "require": {
    "guzzlehttp/guzzle": "^6.3",
    "php": "^5.6|^7",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^5",
    "swaggest/json-schema": "^0.12"
  },
  "autoload": {
    "psr-4": {
      "Swaggest\\RestClient\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Swaggest\\RestClient\\Tests\\": "tests/src/"
    }
  },
  "scripts": {
    "test": "php -dxdebug.coverage_enable=1 ./vendor/bin/phpunit --coverage-text"
  }
}
